			start = angle;
			local share = (my.shares[i][k]/(shareTotal[i]/100))*3.6;
			if (share < 2) then share = 2; end
			stop = angle + math.rad(share);
			angle = stop;
			startpoint = { math.cos(start), math.sin(start)}
			stoppoint = {math.cos(stop), math.sin(stop) };
			longarc = 0;
			if (share >= 180) then longarc = 1; end
			
			pies = pies .. string.format([[
